<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_Account_Manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:backgroundTint="@android:color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_gohome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="@android:color/black"
                android:text="Main Menu"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/label_Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="Username: "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:ems="10"
                android:foregroundTint="@android:color/black"
                android:inputType="textPersonName"
                android:text="iacaneda"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/label_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="Email: "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:ems="10"
                android:foregroundTint="@android:color/black"
                android:inputType="textPersonName"
                android:text="iacaneda@buffalo.edu"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:typeface="normal" />

            <TextView
                android:id="@+id/curr_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="Current Password:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/curr_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter password to save changes."
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:typeface="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/new_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="New Password:"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:typeface="normal" />

            <EditText
                android:id="@+id/new_pass_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter new password."
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:typeface="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/confirm_new_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="Confirm New Password:"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:typeface="normal" />

            <EditText
                android:id="@+id/confirm_new_pass_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Confirm new password."
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:typeface="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/label_BillingAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="Billing Address: "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_StreetAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="Street Address: "
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_streetadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65sp"
                android:ems="10"
                android:foregroundTint="@android:color/black"
                android:inputType="textPersonName"
                android:text="555 Cherry Lane"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/label_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="City: "
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65sp"
                android:ems="10"
                android:foregroundTint="@android:color/black"
                android:inputType="textPersonName"
                android:text="Buffalo"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/label_State"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="State/Province:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65sp"
                android:ems="10"
                android:foregroundTint="@android:color/black"
                android:inputType="textPersonName"
                android:text="NY"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/label_Zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="Zip/Postal: "
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65sp"
                android:ems="10"
                android:foregroundTint="@android:color/black"
                android:inputType="textPersonName"
                android:text="14261"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/label_Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="25sp"
                android:foregroundTint="@android:color/black"
                android:text="Country:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65sp"
                android:ems="10"
                android:foregroundTint="@android:color/black"
                android:inputType="textPersonName"
                android:text="United States"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/save_changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/help_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/delete_account_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:text="Delete Account"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>