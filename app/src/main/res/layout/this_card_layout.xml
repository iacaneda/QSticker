<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/back_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Your Cards" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="300sp"
                android:layout_height="275sp"
                android:layout_marginLeft="50sp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/mastercardofficial" />

            <TextView
                android:id="@+id/debit_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Debit Card"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/card_num_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card Number: ****-****-****-5555"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/exp_date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expiration Date: 06/19"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:text="CVV: ***"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/edit_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Edit Card Information (Will be asked to enter QSticker Password)."
                android:text="Edit Card" />

            <Button
                android:id="@+id/delete_card_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:text="Delete Card" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>