    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/home_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="17sp"
                android:paddingTop="17sp"
                android:text="Welcome to QSticker. "
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="36sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="165sp"><![CDATA[
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view"
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        card_view:cardCornerRadius="4dp">

                       

                ]]>

                <ImageButton
                    android:id="@+id/btn_homepay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_dark_background"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/friendsshoppingtogether" />

                <TextView
                    android:id="@+id/textView_pay"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginLeft="20sp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="Pay"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp"
                    android:textStyle="bold" /><![CDATA[

                            android:id="@+id/info_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                 
            ]]>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="165sp"><![CDATA[
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    card_view:cardCornerRadius="4dp">





                ]]>

                <ImageButton
                    android:id="@+id/btn_homego"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_dark_background"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/subway" />

                <TextView
                    android:id="@+id/textView_Go"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginLeft="20sp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="Go"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp"
                    android:textStyle="bold" /><![CDATA[

                        android:id="@+id/info_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
              ]]>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="165sp">
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view"
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        card_view:cardCornerRadius="4dp">

                       

                <ImageButton
                    android:id="@+id/btn_homemange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_dark_background"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/managepic" />

                <TextView
                    android:id="@+id/textView_Manage"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginLeft="20sp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="Manage"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp"
                    android:textStyle="bold" /><![CDATA[



                        android:id="@+id/info_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
               
        ]]>
        </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView><![CDATA[

       

